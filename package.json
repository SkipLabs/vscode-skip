{
  "name": "skip",
  "displayName": "SkipLang",
  "description": "Manage Skip Language",
  "version": "0.0.2",
  "readme": "README.md",
  "author": {
    "name": "SkipLabs"
  },
  "engines": {
    "vscode": "^1.41.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SkipLabs/skdb.git",
    "directory": "ide/vscode/skip"
  },
  "license": "MIT",
  "keywords": [
    "Skip",
    "SkipLabs",
    "SkipLang",
    "SKDB"
  ],
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "skip"
      }
    ],
    "languages": [
      {
        "id": "skip",
        "aliases": [
          "Skip",
          "skip"
        ],
        "extensions": [
          ".sk"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "skip",
        "scopeName": "source.skip",
        "path": "./syntaxes/skip.tmLanguage.json"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:skip"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "fmt": "npx prettier --write .",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "which": "^2.0.2"
  },
  "devDependencies": {
    "prettier": "^3.0.3",
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/which": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
